<div id="post_content">
  <h1 class="title">
    <%= @post.title %>
  </h1>

  <p class="date">
    <small> Submitted <%= time_ago_in_words(@post.created_at) %> ago </small>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Delete', post_path(@post), method: :delete, data: { confirm: "Do you really want to delete it?" } %>
  </p>

  <p class="body">
    <%= @post.body %>
  </p>
</div>